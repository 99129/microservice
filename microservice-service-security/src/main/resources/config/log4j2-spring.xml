<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="console_pattern">%clr{%d{yyyy-MM-dd HH:mm:ss.SSS}}{faint} %clr{%5p} %clr{${sys:PID}}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}[%L]}{cyan} %clr{:}{faint} %m%n%wEx</Property>
        <Property name="file_pattern">%d{yyyy-MM-dd HH:mm:ss.SSS} %5p ${sys:PID} --- [%15.15t] %-40.40c{1.}[%L] : %m%n%wEx</Property>
        <!-- 日志文件大小 -->
        <Property name="file_size">10MB</Property>
        <Property name="file_name">logs/security</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- 输出debug及以上级别的信息（onMatch），其他拒绝（onMismatch） -->
            <ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="${console_pattern}"/>
        </Console>

        <!-- 输出trace及以上级别的日志到指定文件，最大10M，warn、error除外 -->
        <RollingFile name="app_debug" fileName="${file_name}-debug.log" filePattern="${file_name}_debug-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${file_pattern}"/>
            <Policies>
                <!-- 每24小时更新一次 -->
                <TimeBasedTriggeringPolicy modulate="true" interval="24" />
                <SizeBasedTriggeringPolicy size="${file_size}" />
            </Policies>
            <Filters>
                <!-- 拒绝输出warn及以上 -->
                <ThresholdFilter level="warn" onMatch="DENY" onMismatch="NEUTRAL"/>
                <!-- 输出debug及以上 -->
                <ThresholdFilter level="debug" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
        </RollingFile>

        <!-- 输出warn及以上级别的日志到指定文件 -->
        <RollingFile name="app_warn" fileName="${file_name}-warn.log" filePattern="${file_name}_warn-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${file_pattern}"/>
            <Policies>
                <!-- 每24小时更新一次 -->
                <TimeBasedTriggeringPolicy modulate="true" interval="24" />
                <SizeBasedTriggeringPolicy size="${file_size}" />
            </Policies>
            <!-- 输出warn及以上 -->
            <ThresholdFilter level="warn" onMatch="ACCEPT" onMismatch="DENY"/>
        </RollingFile>
    </Appenders>
    <loggers>
        <Logger name="com.zenmen.mochui" level="debug">
            <AppenderRef ref="app_debug"/>
        </Logger>
        <Root>
            <AppenderRef ref="Console"/>
            <AppenderRef ref="app_warn"/>
        </Root>
    </loggers>
</Configuration>